<div class="container">
  <h1><%= @product.name %></h1>
  <p><%= @product.description %></p>
  <p><%= number_to_currency(@product.price) %></p>
  <% if @product.image.present? %>
    <%= image_tag @product.image %>
  <% end %>
  <%= link_to 'Back to Products', products_path, class: 'back-link' %>
</div>
